<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ContactUsFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginBottom="50dp"
          android:layout_marginTop="50dp">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Call US"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"/>

          <Button
              android:layout_width="280dp"
              android:layout_height="50dp"
              android:text="0599000000"
              android:id="@+id/callBtn"
              android:background="@color/cpb_green_dark"/>
      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginBottom="50dp"
          >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Mail US"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"/>

          <Button
              android:layout_width="280dp"
              android:layout_height="50dp"
              android:text="TopPizza@Pizza.com"
              android:id="@+id/mailBtn"
              android:background="@color/cpb_green_dark"/>
      </LinearLayout>



      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginBottom="50dp">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Find Us"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"/>

          <Button
              android:layout_width="280dp"
              android:layout_height="50dp"
              android:text="Ramallh, Jaffa ST."
              android:id="@+id/mapBtn"
              android:background="@color/cpb_green_dark"/>
      </LinearLayout>



  </LinearLayout>
</FrameLayout>